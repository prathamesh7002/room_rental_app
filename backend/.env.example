# Environment Variables for Room Rental Platform
# Copy this file to .env and fill in your values
# For production, use .env.production with secure values

# Django Settings
SECRET_KEY=your-secret-key-here-change-this-for-production
DEBUG=True
ENVIRONMENT=development
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration
# Development (SQLite - default)
DATABASE_ENGINE=django.db.backends.mysql
DATABASE_NAME=rental_room_app_db
DATABASE_USER=root
DATABASE_PASSWORD=2007
DATABASE_HOST=localhost
DATABASE_PORT=3306

# Production (MySQL - recommended)
# DATABASE_ENGINE=
# DATABASE_NAME=
# DATABASE_USER=
# DATABASE_PASSWORD=
# DATABASE_HOST=
# DATABASE_PORT=

# Security Settings
SECURE_SSL_REDIRECT=False
SECURE_HSTS_SECONDS=0
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False

# CORS Settings
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
CORS_ALLOW_CREDENTIALS=True

